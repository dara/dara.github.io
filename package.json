{
  "dependencies": {
    "@tailwindcss/cli": "^4.0.8",
    "tailwindcss": "^4.0.8"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "concurrently": "^8.2.0"
  },
  "scripts": {
    "dev": "concurrently \"npx @tailwindcss/cli -i ./src/tailwind.styles.css -o ./src/styles.css --watch\" \"live-server --port=3000 --open=./\"",
    "tailwind": "npx @tailwindcss/cli -i ./src/tailwind.styles.css -o ./src/styles.css --watch",
    "serve": "live-server --port=3000 --open=./"
  }
}
